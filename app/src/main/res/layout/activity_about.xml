<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity"
    android:background="@color/black">

    <Button
        android:id="@+id/button3"
        android:layout_width="168dp"
        android:layout_height="42dp"
        android:layout_marginTop="516dp"
        android:fontFamily="sans-serif"
        android:text="@string/VOLVER"
        android:textColorHighlight="#E67575"
        android:textColorLink="#FA9A9A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#7E1919" />

    <Button
        android:id="@+id/button2"
        android:layout_width="168dp"
        android:layout_height="42dp"
        android:layout_marginTop="464dp"
        android:fontFamily="sans-serif"
        android:text="@string/SOPORTE"
        android:textColorHighlight="#E67575"
        android:textColorLink="#FA9A9A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#7E1919" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="228dp"
        android:layout_height="56dp"
        android:layout_marginTop="140dp"
        android:text="@string/PATRICK"
        android:textAlignment="center"
        android:textColor="#DADADA"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.316"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="156dp"
        android:layout_height="285dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/patrick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.139" />

    <Button
        android:id="@+id/button1"
        android:layout_width="168dp"
        android:layout_height="42dp"
        android:layout_marginTop="412dp"
        android:fontFamily="sans-serif"
        android:onClick="irWeb"
        android:text="@string/IR_WEB"
        android:textColorHighlight="#E67575"
        android:textColorLink="#FA9A9A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#7E1919" />

</androidx.constraintlayout.widget.ConstraintLayout>