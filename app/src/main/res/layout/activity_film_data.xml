<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar2"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="43dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Regreso al futuro"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonImdb"
        android:layout_width="136dp"
        android:layout_height="40dp"
        android:layout_below="@+id/imageViewFilm"
        android:layout_alignStart="@+id/imageViewFilm"
        android:layout_alignEnd="@+id/imageViewFilm"
        android:layout_marginStart="38dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="38dp"
        android:text="@string/VER_IMDB" />

    <Button
        android:id="@+id/buttonReturnMainMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonEdit"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/buttonEdit"
        android:text="@string/VOLVER_PRINCIPAL" />

    <Button
        android:id="@+id/buttonEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonImdb"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="43dp"
        android:text="@string/EDIT_PELICULA"/>

    <TextView
        android:id="@+id/textViewSaveState"
        android:layout_width="wrap_content"
        android:layout_height="134dp"
        android:layout_below="@+id/buttonEdit"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="84dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="204dp"
        android:textAlignment="center"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageViewFilm"
        android:layout_width="212dp"
        android:layout_height="195dp"
        android:layout_below="@+id/textViewTitle"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="11dp"
        android:src="@drawable/back_to_the_future" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="136dp"
        android:layout_height="19dp"
        android:layout_alignTop="@+id/imageViewFilm"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="0dp"
        android:layout_toEndOf="@+id/imageViewFilm"
        android:text="@string/DIRECTOR"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="136dp"
        android:layout_height="19dp"
        android:layout_below="@+id/textViewDirector"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="1dp"
        android:layout_toEndOf="@+id/imageViewFilm"
        android:text="@string/ANYO"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textViewGenre"
        android:layout_width="136dp"
        android:layout_height="19dp"
        android:layout_below="@+id/textViewYear"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="0dp"
        android:layout_toEndOf="@+id/imageViewFilm"
        android:text="SciFi"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewFormat"
        android:layout_width="136dp"
        android:layout_height="19dp"
        android:layout_below="@+id/textViewGenre"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_toEndOf="@+id/imageViewFilm"
        android:text="BluRay"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewComment"
        android:layout_width="138dp"
        android:layout_height="48dp"
        android:layout_below="@+id/textViewFormat"
        android:layout_alignStart="@+id/textViewFormat"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="0dp"
        android:text="Comentario"
        android:textStyle="" />

    <TextView
        android:id="@+id/textViewDirector"
        android:layout_width="175dp"
        android:layout_height="39dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="2dp"
        android:layout_toEndOf="@+id/imageViewFilm"
        android:text="Robert Zemeckis" />

    <TextView
        android:id="@+id/textViewYear"
        android:layout_width="136dp"
        android:layout_height="19dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_toEndOf="@+id/imageViewFilm"
        android:text="1985" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="2dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="La Filmoteca" />

</RelativeLayout>